@model List<WebApplication1.Models.Item>

<h2>Listado de Items</h2>

<a asp-action="Crear" class="btn btn-primary">Nuevo Item</a>
<a asp-controller="Venta" asp-action="ListaVentas" class="btn btn-primary">Ver Ventas</a>
<a asp-controller="Venta" asp-action="ListaVentasCrear" class="btn btn-success">Crear Venta</a>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>price</th>
            <th>Operacion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>@item.price.ToString("C") </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>

                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>



                </td>
            </tr>
        }
    </tbody>
</table>
