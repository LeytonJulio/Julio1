@model WebApplication1.Models.Item

@{
    ViewData["Title"] = "Eliminar Item";
}

<h2>Eliminar Item</h2>

<h4>¿Estás seguro que deseas eliminar este item?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.price</dd>
</dl>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
